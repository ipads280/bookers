<h1>Editing Book</h1>

<%= form_with model: @book,url:update_book_path(@book.id),method: :patch do |f| %>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <label>Title</label>
  <%= f.text_field :title %>

  <label>Body</label>
  <%= f.text_area :body %><br>

  <%= f.submit 'Update Book' %><br>
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%=link_to"Back","/books"%>


<% end %>